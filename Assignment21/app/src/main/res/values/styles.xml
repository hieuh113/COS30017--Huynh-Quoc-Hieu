<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom text styles -->
    <style name="ItemTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="ItemDetailText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="PriceText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/price_color</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Button styles -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/button_secondary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>

